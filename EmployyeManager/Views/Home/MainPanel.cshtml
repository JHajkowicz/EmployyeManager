@{
    ViewBag.Title = "Main Panel";
}

<style>
    body {
        background-color: #d5f5e3;
    }

    h2 {
        font-size: 28px;
        margin-bottom: 25px;
        text-align: center;
        border-bottom: 2px solid #d5f5e3;
        padding-bottom: 10px;
    }

    ul {
        list-style: none;
        padding: 0;
    }

    li {
        margin-bottom: 10px;
    }

    a {
        display: block;
        padding: 10px;
        background-color: #1abc9c;
        color: #fff;
        text-align: center;
        border-radius: 5px;
        font-weight: bold;
        text-decoration: none;
    }

        a:hover {
            background-color: #16a085;
        }
</style>

<div class="container" style="background-color: #fff; border-radius: 10px; padding: 20px; box-shadow: 0px 0px 10px #888888;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Main Panel</h2>
            <ul>
                <li>@Html.ActionLink("Create your own company", "Create", "Company")</li>
                <li>@Html.ActionLink("Companies", "Index", "Company")</li>
            </ul>
        </div>
    </div>
</div>